@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h4>Add a New Engineer</h4>

<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>
<p>@Html.ValidationMessageFor(model => model.Experience, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Experience)
  @Html.TextBoxFor(model => model.Experience)

  <input type="submit" value="Add New Engineer" class="btn btn-primary" />
}
<p>@Html.ActionLink("Show All Engineers", "Index")</p>